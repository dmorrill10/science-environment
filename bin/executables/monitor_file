#!/bin/bash

file_to_monitor=$1
crontab_time_specification=$2

if [ ! $file_to_monitor ]; then
  echo "Usage: $0 file 'crontab time specification'"
  echo ''
  echo "Emails the tail of given file periodically according to the given crontab time specification."
  exit
fi

cron_dir=$HOME/.crontabs
if [ ! -e $cron_dir ]; then
  mkdir $cron_dir
fi

